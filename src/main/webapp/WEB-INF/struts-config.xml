<?xml version="1.0" encoding="UTF-8" ?>
<!--
  aoweb-struts: Do not edit

  This page is the master template for the struts-config.xml file.  If the
  following files exist, the contents of the file will be substituted into the
  proper place in this file by the build system.

  struts-config.xml.actions             Additional actions
  struts-config.xml.messageResources    Additional message resources
-->
<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
          "http://struts.apache.org/dtds/struts-config_1_3.dtd">

<struts-config>
    <!-- ========== Form Bean Definitions =================================== -->
    <form-beans>
        <!-- / -->
        <form-bean name="contactForm" type="com.aoindustries.website.ContactForm" />
        <form-bean name="loginForm" type="com.aoindustries.website.LoginForm" />
    </form-beans>

    <!-- ========== Global Error Handlers =================================== -->
    <global-exceptions>
        <exception key="Exception.message" type="java.lang.Exception" handler="com.aoindustries.website.ExceptionHandler" />
    </global-exceptions>

    <!-- ========== Global Forward Definitions ============================== -->
    <global-forwards>
        <!-- / -->
        <forward name="exception" path="/exception.jsp" redirect="false" />
        <forward name="login" path="/login.do" redirect="false" />
        <forward name="permission-denied" path="/permission-denied.do" redirect="false" />
    </global-forwards>

    <!-- ========== Action Mapping Definitions ============================== -->
    <action-mappings>
        <!-- =============== Common =============== -->
        <action
            path="/exception"
            type="com.aoindustries.website.SkinAction"
        >
            <forward name="success" path="/exception.jsp" redirect="false" />
        </action>
        <action
            path="/not-found"
            type="com.aoindustries.website.SkinAction"
        >
            <forward name="success" path="/not-found.jsp" redirect="false" />
        </action>
        <action
            path="/contact"
            name="contactForm"
            scope="request"
            validate="false"
            type="com.aoindustries.website.SkinAction"
        >
            <forward name="success" path="/contact.jsp" redirect="false" />
        </action>
        <action
            path="/contact-completed"
            name="contactForm"
            scope="request"
            validate="false"
            type="com.aoindustries.website.ContactCompletedAction"
        >
            <forward name="input" path="/contact.jsp" redirect="false" />
            <forward name="success" path="/contact-completed.jsp" redirect="false" />
        </action>
        <action
            path="/login"
            name="loginForm"
            scope="request"
            validate="false"
            type="com.aoindustries.website.LoginAction"
        >
            <forward name="success" path="/login.jsp" redirect="false" />
        </action>
        <action
            path="/login-completed"
            name="loginForm"
            scope="request"
            validate="false"
            type="com.aoindustries.website.LoginCompletedAction"
        >
            <forward name="input" path="/login.jsp" redirect="false" />
            <!-- Redirect done directly from Action now: forward name="success" path="/clientarea/index.do" redirect="true" /-->
            <forward name="failure" path="/login.jsp" redirect="false" />
        </action>
        <action
            path="/permission-denied"
            type="com.aoindustries.website.PermissionDeniedAction"
        />
        <action
            path="/session-timeout"
            name="loginForm"
            scope="request"
            validate="false"
            type="com.aoindustries.website.SessionTimeoutAction"
        >
            <forward name="success" path="/login.jsp" redirect="false" />
        </action>
        <action
            path="/set-resource-bundle-value"
            type="com.aoindustries.website.SetResourceBundleValueAction"
        >
            <forward name="success" path="/set-resource-bundle-value.jsp" redirect="false" />
        </action>
        <action
            path="/logout"
            type="com.aoindustries.website.LogoutAction"
        >
            <forward name="success" path="/logout.jsp" redirect="false" />
        </action>
<!-- Include "struts-config.xml.actions" -->
        <action
            path="/**"
            type="com.aoindustries.website.SkinAction"
        >
            <forward name="success" path="/not-found.jsp" redirect="false" />
        </action>
    </action-mappings>

    <!-- ========== Controller ============================================== -->
    <controller
        nocache="true"
    />

    <!-- ========== Message Resources ======================================= -->
    <message-resources
        factory="com.aoindustries.website.struts.ResourceBundleMessageResourcesFactory"
        parameter="com.aoindustries.website.SiteApplicationResources"
        null="false"
    />
    <message-resources
        key="/ApplicationResources"
        factory="com.aoindustries.website.struts.ResourceBundleMessageResourcesFactory"
        parameter="com.aoindustries.website.ApplicationResources"
        null="false"
    />
    <message-resources
        key="/clientarea/ApplicationResources"
        factory="com.aoindustries.website.struts.ResourceBundleMessageResourcesFactory"
        parameter="com.aoindustries.website.clientarea.ApplicationResources"
        null="false"
    />
    <message-resources
        key="/clientarea/accounting/ApplicationResources"
        factory="com.aoindustries.website.struts.ResourceBundleMessageResourcesFactory"
        parameter="com.aoindustries.website.clientarea.accounting.ApplicationResources"
        null="false"
    />
    <message-resources
        key="/clientarea/control/ApplicationResources"
        factory="com.aoindustries.website.struts.ResourceBundleMessageResourcesFactory"
        parameter="com.aoindustries.website.clientarea.control.ApplicationResources"
        null="false"
    />
    <message-resources
        key="/clientarea/ticket/ApplicationResources"
        factory="com.aoindustries.website.struts.ResourceBundleMessageResourcesFactory"
        parameter="com.aoindustries.website.clientarea.ticket.ApplicationResources"
        null="false"
    />
    <message-resources
        key="/clientarea/webmail/ApplicationResources"
        factory="com.aoindustries.website.struts.ResourceBundleMessageResourcesFactory"
        parameter="com.aoindustries.website.clientarea.webmail.ApplicationResources"
        null="false"
    />

<!-- Include "struts-config.xml.messageResources" -->

    <!-- ========== Validator Plug-In ======================================= -->
    <plug-in className="org.apache.struts.validator.ValidatorPlugIn">
        <set-property property="pathnames" value="/org/apache/struts/validator/validator-rules.xml,/WEB-INF/validator-custom-rules.xml,/WEB-INF/validator-constants.xml,/WEB-INF/validator.xml" />
    </plug-in>
</struts-config>
