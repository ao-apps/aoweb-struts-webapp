<!--
  aoweb-struts: Do not edit

  This page is the master template for the struts-config-clientarea-accounting.xml
  file.  If the following files exist, the contents of the file will be
  substituted into the proper place in this file by the build system.

  struts-config-clientarea-accounting.xml.messageResources    Additional message resources
-->
<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
          "http://struts.apache.org/dtds/struts-config_1_3.dtd">

<struts-config>
    <!-- ========== Form Bean Definitions =================================== -->
    <form-beans>
        <form-bean name="addCreditCardForm" type="com.aoindustries.website.clientarea.accounting.AddCreditCardForm" />
        <form-bean name="editCreditCardForm" type="com.aoindustries.website.clientarea.accounting.EditCreditCardForm" />
        <form-bean name="makePaymentStoredCardForm" type="com.aoindustries.website.clientarea.accounting.MakePaymentStoredCardForm" />
        <form-bean name="makePaymentNewCardForm" type="com.aoindustries.website.clientarea.accounting.MakePaymentNewCardForm" />
    </form-beans>

    <!-- ========== Global Error Handlers =================================== -->
    <global-exceptions>
        <exception key="Exception.message" type="java.lang.Exception" handler="com.aoindustries.website.ExceptionHandler" />
    </global-exceptions>

    <!-- ========== Global Forward Definitions ============================== -->
    <global-forwards>
        <!-- / -->
        <forward name="exception" module="" path="/exception.jsp" redirect="false" />
        <forward name="login" module="" path="/login.do" redirect="false" />
        <forward name="permission-denied" module="" path="/permission-denied.do" redirect="false" />
        <!-- /clientarea/accounting -->
        <forward name="credit-card-manager" path="/credit-card-manager.do" redirect="true" />
        <forward name="make-payment" path="/make-payment.do" redirect="true" />
    </global-forwards>

    <!-- ========== Action Mapping Definitions ============================== -->
    <action-mappings>
        <action
            path="/index"
            type="com.aoindustries.website.SkinAction"
        >
            <forward name="success" path="/index.jsp" redirect="false" />
        </action>
        <action
            path="/credit-card-manager"
            type="com.aoindustries.website.clientarea.accounting.CreditCardManagerAction"
        >
            <forward name="permission-denied" path="/credit-card-manager.jsp" redirect="false" />
            <forward name="success" path="/credit-card-manager.jsp" redirect="false" />
        </action>
        <action
            path="/add-credit-card"
            name="addCreditCardForm"
            scope="request"
            validate="false"
            type="com.aoindustries.website.clientarea.accounting.AddCreditCardAction"
        >
            <forward name="permission-denied" path="/add-credit-card.jsp" redirect="false" />
            <forward name="success" path="/add-credit-card.jsp" redirect="false" />
        </action>
        <action
            path="/add-credit-card-completed"
            name="addCreditCardForm"
            scope="request"
            validate="false"
            type="com.aoindustries.website.clientarea.accounting.AddCreditCardCompletedAction"
        >
            <forward name="permission-denied" path="/add-credit-card.jsp" redirect="false" />
            <forward name="input" path="/add-credit-card.jsp" redirect="false" />
            <forward name="success" path="/add-credit-card-completed.jsp" redirect="false" />
        </action>
        <action
            path="/delete-credit-card"
            type="com.aoindustries.website.clientarea.accounting.DeleteCreditCardAction"
        >
            <forward name="permission-denied" path="/delete-credit-card.jsp" redirect="false" />
            <forward name="success" path="/delete-credit-card.jsp" redirect="false" />
        </action>
        <action
            path="/delete-credit-card-completed"
            type="com.aoindustries.website.clientarea.accounting.DeleteCreditCardCompletedAction"
        >
            <forward name="permission-denied" path="/delete-credit-card-completed.jsp" redirect="false" />
            <forward name="success" path="/delete-credit-card-completed.jsp" redirect="false" />
        </action>
        <action
            path="/edit-credit-card"
            name="editCreditCardForm"
            scope="request"
            validate="false"
            type="com.aoindustries.website.clientarea.accounting.EditCreditCardAction"
        >
            <forward name="permission-denied" path="/edit-credit-card.jsp" redirect="false" />
            <forward name="success" path="/edit-credit-card.jsp" redirect="false" />
        </action>
        <action
            path="/edit-credit-card-completed"
            name="editCreditCardForm"
            scope="request"
            validate="false"
            type="com.aoindustries.website.clientarea.accounting.EditCreditCardCompletedAction"
        >
            <forward name="permission-denied" path="/edit-credit-card.jsp" redirect="false" />
            <forward name="input" path="/edit-credit-card.jsp" redirect="false" />
            <forward name="success" path="/edit-credit-card-completed.jsp" redirect="false" />
        </action>
        <action
            path="/configure-automatic-billing"
            type="com.aoindustries.website.clientarea.accounting.ConfigureAutomaticBillingAction"
        >
            <forward name="permission-denied" path="/configure-automatic-billing.jsp" redirect="false" />
            <forward name="success" path="/configure-automatic-billing.jsp" redirect="false" />
        </action>
        <action
            path="/configure-automatic-billing-completed"
            type="com.aoindustries.website.clientarea.accounting.ConfigureAutomaticBillingCompletedAction"
        >
            <forward name="permission-denied" path="/configure-automatic-billing-completed.jsp" redirect="false" />
            <forward name="success" path="/configure-automatic-billing-completed.jsp" redirect="false" />
        </action>
        <action
            path="/make-payment"
            type="com.aoindustries.website.clientarea.accounting.MakePaymentAction"
        >
            <forward name="success" path="/make-payment.jsp" redirect="false" />
        </action>
        <action
            path="/make-payment-select-card"
            type="com.aoindustries.website.clientarea.accounting.MakePaymentSelectCardAction"
        >
            <forward name="success" path="/make-payment-select-card.jsp" redirect="false" />
        </action>
        <action
            path="/make-payment-stored-card"
            name="makePaymentStoredCardForm"
            scope="request"
            validate="false"
            type="com.aoindustries.website.clientarea.accounting.MakePaymentStoredCardAction"
        >
            <forward name="success" path="/make-payment-stored-card.jsp" redirect="false" />
        </action>
        <action
            path="/make-payment-stored-card-completed"
            name="makePaymentStoredCardForm"
            scope="request"
            validate="false"
            type="com.aoindustries.website.clientarea.accounting.MakePaymentStoredCardCompletedAction"
        >
            <forward name="input" path="/make-payment-stored-card.jsp" redirect="false" />
            <forward name="error" path="/make-payment-stored-card-error.jsp" redirect="false" />
            <forward name="hold" path="/make-payment-stored-card-hold.jsp" redirect="false" />
            <forward name="declined" path="/make-payment-stored-card-declined.jsp" redirect="false" />
            <forward name="success" path="/make-payment-stored-card-completed.jsp" redirect="false" />
        </action>
        <action
            path="/make-payment-new-card"
            name="makePaymentNewCardForm"
            scope="request"
            validate="false"
            type="com.aoindustries.website.clientarea.accounting.MakePaymentNewCardAction"
        >
            <forward name="success" path="/make-payment-new-card.jsp" redirect="false" />
        </action>
        <action
            path="/make-payment-new-card-completed"
            name="makePaymentNewCardForm"
            scope="request"
            validate="false"
            type="com.aoindustries.website.clientarea.accounting.MakePaymentNewCardCompletedAction"
        >
            <forward name="input" path="/make-payment-new-card.jsp" redirect="false" />
            <forward name="error" path="/make-payment-new-card.jsp" redirect="false" />
            <forward name="hold" path="/make-payment-new-card-hold.jsp" redirect="false" />
            <forward name="declined" path="/make-payment-new-card.jsp" redirect="false" />
            <forward name="success" path="/make-payment-new-card-completed.jsp" redirect="false" />
        </action>
        <action
            path="/**"
            type="com.aoindustries.website.SkinAction"
        >
            <forward name="success" module="" path="/not-found.jsp" redirect="false" />
        </action>
    </action-mappings>

    <!-- ========== Controller ============================================== -->
    <controller
        nocache="true"
    />

    <!-- ========== Message Resources ======================================= -->
    <message-resources
        factory="com.aoindustries.website.struts.ResourceBundleMessageResourcesFactory"
        parameter="com.aoindustries.website.SiteApplicationResources"
        null="false"
    />
    <message-resources
        key="/ApplicationResources"
        factory="com.aoindustries.website.struts.ResourceBundleMessageResourcesFactory"
        parameter="com.aoindustries.website.ApplicationResources"
        null="false"
    />
    <message-resources
        key="/clientarea/ApplicationResources"
        factory="com.aoindustries.website.struts.ResourceBundleMessageResourcesFactory"
        parameter="com.aoindustries.website.clientarea.ApplicationResources"
        null="false"
    />
    <message-resources
        key="/clientarea/accounting/ApplicationResources"
        factory="com.aoindustries.website.struts.ResourceBundleMessageResourcesFactory"
        parameter="com.aoindustries.website.clientarea.accounting.ApplicationResources"
        null="false"
    />
    <message-resources
        key="/clientarea/control/ApplicationResources"
        factory="com.aoindustries.website.struts.ResourceBundleMessageResourcesFactory"
        parameter="com.aoindustries.website.clientarea.control.ApplicationResources"
        null="false"
    />
    <message-resources
        key="/clientarea/ticket/ApplicationResources"
        factory="com.aoindustries.website.struts.ResourceBundleMessageResourcesFactory"
        parameter="com.aoindustries.website.clientarea.ticket.ApplicationResources"
        null="false"
    />
    <message-resources
        key="/clientarea/webmail/ApplicationResources"
        factory="com.aoindustries.website.struts.ResourceBundleMessageResourcesFactory"
        parameter="com.aoindustries.website.clientarea.webmail.ApplicationResources"
        null="false"
    />
    <message-resources
        key="/signup/ApplicationResources"
        factory="com.aoindustries.website.struts.ResourceBundleMessageResourcesFactory"
        parameter="com.aoindustries.website.signup.ApplicationResources"
        null="false"
    />

<!-- Include "struts-config-clientarea-accounting.xml.messageResources" -->

    <!-- ========== Validator Plug-In ======================================= -->
    <plug-in className="org.apache.struts.validator.ValidatorPlugIn">
        <set-property property="pathnames" value="/org/apache/struts/validator/validator-rules.xml,/WEB-INF/validator-custom-rules.xml,/WEB-INF/validator-constants.xml" />
    </plug-in>
</struts-config>
