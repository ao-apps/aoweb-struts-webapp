<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE form-validation PUBLIC
     "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.3.0//EN"
     "http://jakarta.apache.org/commons/dtds/validator_1_3_0.dtd">

<form-validation>
    <formset>
        <form name="contactForm">
            <field property="from" depends="required,email">
                <msg name="required" key="contact.field.from.required" />
                <msg name="email" key="contact.field.from.email" />
            </field>
            <field property="subject" depends="required">
                <msg name="required" key="contact.field.subject.required" />
            </field>
        </form>
        <form name="loginForm">
            <field property="username" depends="required">
                <msg name="required" key="login.field.username.required" />
            </field>
            <field property="password" depends="required">
                <msg name="required" key="login.field.password.required" />
            </field>
        </form>
    </formset>
</form-validation>
